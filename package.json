{
  "name": "battlecity",
  "version": "0.0.0",
  "description": "A mud on-chain Battle City",
  "repository": {
    "type": "git",
    "url": "https://github.com/trevorgames/battlecity.git"
  },
  "private": true,
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,css,md,mdx,sol}": "prettier --write"
  },
  "scripts": {
    "build": "pnpm recursive run build",
    "dev": "mprocs",
    "dev:client": "pnpm --filter 'client' run dev",
    "dev:contracts": "pnpm --filter 'contracts' dev",
    "foundry:up": "curl -L https://foundry.paradigm.xyz | bash && bash $HOME/.foundry/bin/foundryup",
    "mud:up": "pnpm mud set-version --tag main && pnpm install",
    "prepare": "husky",
    "test": "pnpm recursive run test",
    "lint": "pnpm prettier:check && eslint . --ext .ts --ext .tsx",
    "prettier": "prettier --write '**/*.{ts,tsx,css,md,mdx,sol}'",
    "prettier:check": "prettier --check '**/*.{ts,tsx,css,md,mdx,sol}'"
  },
  "devDependencies": {
    "@latticexyz/cli": "2.0.4",
    "@types/debug": "4.1.7",
    "@typescript-eslint/eslint-plugin": "7.1.1",
    "@typescript-eslint/parser": "7.1.1",
    "eslint": "8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "mprocs": "^0.6.4",
    "prettier": "3.2.5",
    "prettier-plugin-solidity": "1.3.1",
    "rimraf": "^3.0.2",
    "typescript": "5.4.2"
  }
}
